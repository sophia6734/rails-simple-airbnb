<!DOCTYPE html>
<html>
  <head>
    <title>RailsSimpleAirbnb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  </head>

  <body>
    <ul class="nav my-3">
      <li class="nav-item">
        <%= link_to 'Fake Aribnb', flats_path, class: 'nav-link active' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Add Flat', new_flat_path, class: 'nav-link btn btn-outline-primary' %>
      </li>
      <li class="nav-item">
        <form role="search" style="width: 15em; margin: 0.3em 2em;">
          <div class="input-group">
              <input type="text" class="form-control" placeholder="Search">
              <div class="input-group-btn">
                  <button type="submit" class="btn btn-default">
                      <span class="glyphicon glyphicon-search"></span>
                  </button>
              </div>
          </div>
        </form>
      </li>
    </ul>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
